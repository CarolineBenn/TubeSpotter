<div class="show">
<div class="page-header <%= @class %>">
  <div class="row">
    <div class="medium-12 columns">
      <h2><%= @post.title %><h2>
      <h4>By <%= @post.user.username %></h4>
    </div>
  </div>
</div>

  <div class="row">
    <div class="medium-6 columns">
      <%= image_tag @post.image %>
    </div>
    <div class="medium-6 columns">
      <%= @post.description %>
      <br>
      <%= @post.line %> line
      <br>
      <%= @post.location %> station
      <br>
      Platform <%= @post.platform %>
      <br>

      <em><%= link_to @rolling_stock.stock, train_path(@rolling_stock) %></em>
    
      <br>
    </div>
  </div>






</div>