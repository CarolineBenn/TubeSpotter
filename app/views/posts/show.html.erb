<div class="show">

  <div class="row">
    <div class="medium-12 columns">
      <h2><%= @post.title %> by <%= @post.user.username %></h2>
    </div>
  </div>


  <div class="row">
    <div class="medium-6 columns">
      <%= image_tag @post.image %>
    </div>
    <div class="medium-6 columns">
      <%= @post.description %>
      <br>
      <%= @post.line %> line
      <br>
      <%= @post.location %> station
      <br>
      Platform <%= @post.platform %>
      <br>
    </div>
  </div>






</div>